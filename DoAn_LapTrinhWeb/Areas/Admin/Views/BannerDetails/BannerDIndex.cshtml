                                    <option value="2">Tên khuyến mãi</option>
                                    <option value="3">Tên sản phẩm</option>
                                </select>
                            </div>
                            <!--end::Input group-->
                            <!--begin::Actions-->
                            <div class="d-flex justify-content-end">
                                <button type="reset" class="btn btn-white btn-active-light-primary fw-bold me-2 px-6" data-kt-menu-dismiss="true" data-kt-user-table-filter="reset">Reset</button>
                                <button type="button" class="btn btn-primary fw-bold px-6" data-kt-menu-dismiss="true" data-kt-user-table-filter="filter">Apply</button>
                            </div>
                            <!--end::Actions-->
                        </div>
                        <!--end::Content-->
                    </div>
                    <!--end::Menu-->
                </form>
                <!--end::Form Search-->
            </div>
            <!--end::Search-->
        </div>
        <!--begin::Card title-->
        <!--begin::Card toolbar-->
        <div class="card-toolbar">
            <!--begin::Toolbar-->
            <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                <!--begin::Add-->
                <a href="#" class="btn btn-primary" id="create_banner_detail">
                    <!--begin::Svg Icon | path: icons/duotone/Navigation/Plus.svg-->
                    <span class="svg-icon svg-icon-2">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <rect fill="#000000" x="4" y="11" width="16" height="2" rx="1"/>
                            <rect fill="#000000" opacity="0.5" transform="translate(12.000000, 12.000000) rotate(-270.000000) translate(-12.000000, -12.000000)" x="4" y="11" width="16" height="2" rx="1"/>
                        </svg>
                    </span>
                    <!--end::Svg Icon-->Thêm mới
                </a>
                <!--end::Add-->
            </div>
            <!--end::Toolbar-->
            <!--begin::Group actions-->
            <div class="d-flex justify-content-end align-items-center d-none" data-kt-customer-table-toolbar="selected">
                <div class="fw-bolder me-5">
                    <span class="me-2" data-kt-customer-table-select="selected_count"></span>Đã chọn
                </div>
                <button type="button" class="btn btn-danger" data-kt-customer-table-select="delete_selected">Xóa mục đã chọn</button>
            </div>
            <!--end::Group actions-->
        </div>
        <!--end::Card toolbar-->
    </div>
    <!--end::Card header-->
    <!--begin::Body-->
    <div class="card-body py-3">
        <!--begin::Table container-->
        <!--begin::Table-->
        <table class="table table-sortable table-row-dashed table-row-gray-300 gy-7 center_th_table">
            <!--begin::Table head-->
            <thead>
            <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
                <th class="text-center">Khuyến mãi</th>
                <th class="text-center">Sản phẩm</th>
                <th class="text-center">Ngạy tạo</th>
                <th class="text-center">Ngày kết thúc khuyến mãi</th>
                <th class="text-center">Người tạo</th>
                <th class="text-center">Hành động</th>
            </tr>
            </thead>
            <!--end::Table head-->
            <!--begin::Table body-->
            <tbody class="fw-normal text-gray-600">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex ">
                            <a data-fslightbox href="@item.image_thumbnail">
                                <div class="symbol symbol-45px me-3">
                                    <img src="@item.image_thumbnail" alt="@item.banner_name" style="border: 1px solid #e8f3f3;"/>
                                </div>
                            </a>
                            <div class="d-flex justify-content-start flex-column ">
                                <a href="/promo/@item.banner_slug" target="_blank" class="limit_lenght_bannerdt text-gray-700  fw-bold" data-bs-toggle="tooltip" data-bs-placement="top" title="@item.banner_name">@item.banner_id - @item.banner_name</a>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex ">
                            <a data-fslightbox href="@item.product_img">
                                <div class="symbol symbol-45px me-3">
                                    <img src="@item.product_img" alt="@item.product_name" style="border: 1px solid #e8f3f3;"/>
                                </div>
                            </a>
                            <div class="d-flex justify-content-start flex-column ">
                                <a href="/product/@item.product_slug" target="_blank" class="limit_lenght_productdt text-gray-700  fw-bold" data-bs-toggle="tooltip" data-bs-placement="top" title="@item.product_name">@item.product_id - @item.product_name</a>
                            </div>
                        </div>
                    </td>
                    <td class="text-center">
                        <span>@item.bannerdetail_create_at.ToString("dd-MM-yyyy HH:mm")</span>
                    </td>
                    <td class="text-center">
                        <span>@item.banner_end.ToString("dd-MM-yyyy HH:mm")</span>
                    </td>
                    <td class="text-center">
                        <span class="limit_lenght_mail_bannerdt">@item.bannerdetail_create_by</span>
                    </td>
                    <td class="text-center">
                        <a onclick="deleteConfirm(@item.banner_detail_id, '@item.banner_name', '@item.product_name')" class="btn btn-icon btn-bg-light  btn-active-color-danger btn-sm">
                            <!--begin::Svg Icon | path: fonts/duotone/General/Trash.svg-->
                            <span class="svg-icon svg-icon-3" data-bs-toggle="tooltip" data-bs-placement="top" title="Xóa vĩnh viễn">
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                        <rect x="0" y="0" width="24" height="24"/>
                                        <path d="M6,8 L6,20.5 C6,21.3284271 6.67157288,22 7.5,22 L16.5,22 C17.3284271,22 18,21.3284271 18,20.5 L18,8 L6,8 Z" fill="#000000" fill-rule="nonzero"/>
                                        <path d="M14,4.5 L14,4 C14,3.44771525 13.5522847,3 13,3 L11,3 C10.4477153,3 10,3.44771525 10,4 L10,4.5 L5.5,4.5 C5.22385763,4.5 5,4.72385763 5,5 L5,5.5 C5,5.77614237 5.22385763,6 5.5,6 L18.5,6 C18.7761424,6 19,5.77614237 19,5.5 L19,5 C19,4.72385763 18.7761424,4.5 18.5,4.5 L14,4.5 Z" fill="#000000" opacity="0.3"/>
                                    </g>
                                </svg>
                            </span>
                            <!--end::Svg Icon-->
                        </a>
                    </td>
                </tr>
            }
            </tbody>
            <!--end::Table body-->
        </table>
        <!--end::Table-->
        <!--begin::Table container-->
        <!--begin::Pagination-->
        <div class="paging_custom row ">
            <div class="col-lg-5">
                <span> Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
            </div>
            <div class="col-lg-7 d-flex  flex-row-reverse">
                @Html.PagedListPager(Model, page => Url.Action("BannerDIndex", new { page }), new PagedListRenderOptions
                {
                    LinkToPreviousPageFormat = "‹",
                    LinkToNextPageFormat = "›",
                    DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                    DisplayLinkToLastPage = PagedListDisplayMode.Never,
                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                    MaximumPageNumbersToDisplay = 10
                })
            </div>
        </div>
        <!--end::Pagination-->
    </div>
    <!--end::Body-->
</div>
<!--end::Card-->
</div>
<!--end::Container-->
</div>
<!--end::Post-->
</div>
