@model DoAn_LapTrinhWeb.DTOs.OrderDTOs
@{
    ViewBag.Title = "Thông tin đơn hàng - " + "#" + Model.order_id;
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
    var culture = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
<!--begin::content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Toolbar-->
    <div class="toolbar" id="kt_toolbar ">
        <!--begin::Container-->
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <!--begin::Page title-->
            <div data-kt-place="true" data-kt-place-mode="prepend" data-kt-place-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <!--begin::Title-->
                <h1 class="d-flex align-items-center text-dark fw-bolder my-1 fs-3">Thông tin đơn hàng</h1>
                <!--end::Title-->
                <!--begin::Separator-->
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <!--end::Separator-->
                <!--begin::Breadcrumb-->
                <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("Index", "Dashboard")" class="text-muted text-hover-primary">Bảng điều khiển</a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("OrderIndex", "Orders")" class="text-muted text-hover-primary">Quản lý đơn hàng</a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-dark">Thông tin đơn hàng</li>
                    <!--end::Item-->
                </ul>
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page title-->
            <!--begin::Actions-->
            <div class="d-flex align-items-center py-1">
                <!--begin::Button-->
                <a onclick="window.history.go(-1)" class="btn btn-sm btn-primary ms-2">
                    <span class="svg-icon svg-icon-2">
                        <svg width="24px" height="24px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg">
                            <path d="M21.4451171,17.7910156 C21.4451171,16.9707031 21.6208984,13.7333984 19.0671874,11.1650391 C17.3484374,9.43652344 14.7761718,9.13671875 11.6999999,9 L11.6999999,4.69307548 C11.6999999,4.27886191 11.3642135,3.94307548 10.9499999,3.94307548 C10.7636897,3.94307548 10.584049,4.01242035 10.4460626,4.13760526 L3.30599678,10.6152626 C2.99921905,10.8935795 2.976147,11.3678924 3.2544639,11.6746702 C3.26907199,11.6907721 3.28437331,11.7062312 3.30032452,11.7210037 L10.4403903,18.333467 C10.7442966,18.6149166 11.2188212,18.596712 11.5002708,18.2928057 C11.628669,18.1541628 11.6999999,17.9721616 11.6999999,17.7831961 L11.6999999,13.5 C13.6531249,13.5537109 15.0443703,13.6779456 16.3083984,14.0800781 C18.1284272,14.6590944 19.5349747,16.3018455 20.5280411,19.0083314 L20.5280247,19.0083374 C20.6363903,19.3036749 20.9175496,19.5 21.2321404,19.5 L21.4499999,19.5 C21.4499999,19.0068359 21.4451171,18.2255859 21.4451171,17.7910156 Z" id="Shape" fill="#7e8299" fill-rule="nonzero"></path>
                        </svg>
                    </span>
                    Quay về
                </a>
                <!--end::Button-->
            </div>
            <!--end::Actions-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <!--begin::Container-->
        <div id="kt_content_container" class="container">
            <!-- begin::Invoice 1-->
            <div class="card">

                <!-- begin::Body-->
                <div class="card-body py-15 ">
                    <!-- begin::Wrapper-->
                    <div class="mw-lg-1000px mx-auto w-100">
                        <!-- begin::Header-->
                        <div class="d-flex justify-content-between flex-column flex-sm-row ">
                            <h4 class="fw-boldest text-gray-800 fs-1 pe-5 pb-7">Đơn hàng <span>#</span>@Model.order_id</h4>
                            <!--end::Logo-->
                            <div class="text-sm-end">
                                <!--begin::Name-->
                                <a href="@Url.Action("RolesDetails", "Roles", new {id = Model.account_id})"><span class="text-sm-end fw-bold fs-3 text-gray-800">Khách hàng: @Model.Name</span></a>
                                <!--end::Name-->
                                <!--begin::Text-->
                                <div class="text-sm-end fw-bold fs-7 text-gray-600 mt-2">
                                    <div>Địa chỉ: @Model.Address</div>
                                    <div>Số điện thoại: @Model.Phone</div>
                                    <div class="no-print">
                                        Trạng thái:
                                        @if (Model.status == "1")
                                        {
                                            <span class="text-warning">Chờ xử lý</span>
                                        }
                                        else if (Model.status == "2")
                                        {
                                            <span class="text-info">Đang xử lý</span>
                                        }
                                        else if (Model.status == "3")
                                        {
                                            <span class="text-success">Hoàn thành</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Đã bị hủy</span>
                                        }
                                    </div>
                                </div>
                                <!--end::Text-->
                            </div>
                        </div>
                        <!--end::Header-->
                        <!--begin::Body-->
                        <div class="border-bottom pb-12">
                            <!--begin::Wrapper-->
                            <div class="d-flex justify-content-between flex-column flex-md-row">
                                <!--begin::Content-->
                                <div class="flex-grow-1 pt-8 mb-5">
                                    <!--begin::Table-->
                                    <div class="table-responsive border-bottom mb-14">
                                        <table class="table table-row-dashed">
                                            <thead>
                                                <tr class="border-bottom fs-8 fw-bolder text-gray-400 text-uppercase">
                                                    <th class="min-w-75px pb-9 text-center">ID</th>
                                                    <th class="min-w-200px pb-9">Tên sản phẩm</th>
                                                    <th class="min-w-100px pb-9 text-center">Giá bán</th>
                                                    <th class="min-w-70px pb-9 text-center">Số lượng</th>
                                                    <th class="min-w-100px pb-9 text-end">Thành tiền</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{ double tamtinh = 0; double total = Model.total_price; int countstt = 0;
                                                    foreach (var c in ViewBag.orderDetails)
                                                    {
                                                        tamtinh += c.price * c.quantity;
                                                        <tr class="fw-bolder text-gray-700 fs-8">
                                                            <td class=" align-items-center pt-5 text-center">
                                                                @(countstt += 1)
                                                            </td>
                                                            <td class=" align-items-center pt-5 text-start limit_leng_product_order">
                                                                @foreach (var y in ViewBag.orderProduct)
                                                                {
                                                                    if (y.product_id == c.product_id)
                                                                    {
                                                                        <a class="text-dark" href="@Url.Action("ProductDetails","ProductsAdmin",new { id= y.product_id})" target="_blank">@y.product_name</a>
                                                                    }
                                                                }
                                                            </td>
                                                            <td class="pt-5 text-center">@c.price.ToString("#,###₫", culture.NumberFormat)</td>
                                                            <td class="pt-5 text-center">@c.quantity</td>
                                                            <td class="pt-5 text-dark text-end">@((c.price * c.quantity).ToString("#,###₫", culture.NumberFormat))</td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <!--end::Table-->
                                    <!--begin::Section-->
                                    <div class="d-flex flex-column min-w-md-325px w-100">
                                        <!--begin::Label-->
                                        <div class="fw-bold fs-5 mb-3 text-dark00">
                                            @Model.payment_name
                                        @if (Model.payment_id != 1)
                                        {
                                            if (Model.payment_transaction == "1")
                                            {
                                                <span class="text-warning">(Chưa thanh toán)</span>
                                            }
                                            else
                                            {
                                                <span class="text-success">(Đã thanh toán)</span>
                                            }
                                        }
                                    </div>
                                    <!--end::Label-->
                                    <!--begin::Item-->
                                    <div class="d-flex flex-stack text-gray-800 mb-3 fs-6">
                                        <!--begin::Accountname-->
                                        <div class="fw-bold">Đơn vị vận chuyển: <span class="fw-normal">@Model.delivery_name</span> </div>
                                        <!--end::Accountname-->
                                    </div>
                                    <!--end::Item-->
                                    <!--begin::Item-->
                                    <div class="d-flex flex-stack text-gray-800 mb-3 fs-6">
                                        <!--begin::Accountname-->
                                        @if (Model.order_note != null || Model.order_note == "")
                                        {
                                            <div class="fw-bold">
                                                Ghi chú đơn hàng: <span class="fw-normal">
                                                    @Model.order_note
                                                </span>
                                            </div>
                                        }
                                        <!--end::Accountname-->
                                    </div>
                                    <!--end::Item-->
                                </div>
                                <!--end::Section-->
                            </div>
                            <!--end::Content-->
                            <!--begin::Separator-->
                            <div class="border-end d-none d-md-block mh-450px mx-9"></div>
                            <!--end::Separator-->
                            <!--begin::Content-->
                            <div class="text-end pt-10">

                                <!--begin::Total Amount-->
                                @{ var ship = 30000;
                                    <div class="fs-7 fw-bolder text-gray-400 mb-3">Tạm tính: <span class="fs-7 fw-bolder text-gray-700">@tamtinh.ToString("#,###₫", culture.NumberFormat)</span></div>
                                    <div class="fs-7 fw-bolder text-gray-400 mb-3">phí vận chuyển: <span class="fs-7 fw-bolder text-gray-700">@ship.ToString("#,###₫", culture.NumberFormat)</span></div>
                                    <div class="fs-7 fw-bolder text-gray-400 mb-3">
                                        Giảm giá:
                                        <span class="fs-7 fw-bolder ">
                                            @if (Model.discount_price == 0)
                                            {
                                                <span class="text-gray-700">0₫</span>
                                            }
                                            else
                                            {
                                                if (Model.discount_type == 3)
                                                {
                                                    if (((Model.discount_price * tamtinh) / 100) >= Model.discount_max)
                                                    {
                                                        <span class="text-success">@Model.discount_max.ToString("#,###₫", culture.NumberFormat)</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-success">@(((Model.discount_price*tamtinh) /100).ToString("#,###₫", culture.NumberFormat))</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-success"> @Model.discount_price.ToString("#,###₫", culture.NumberFormat)</span>
                                                }
                                            }
                                        </span>
                                    </div>
                                    <div class="fs-3 fw-bolder text-gray-400 mb-3">Tổng tiền</div>
                                    <div class="fs-xl-2x fs-2 text-danger fw-boldest">
                                        @if (Model.payment_id != 1 && Model.payment_transaction=="2")
                                        {
                                            <span>0₫</span>
                                        }
                                        else
                                        {
                                            <span>@total.ToString("#,###₫", culture.NumberFormat)</span>
                                        }
                                    </div>
                                    <!--end::Total Amount-->
                                    <div class="border-bottom w-100 my-7 my-lg-16"></div>
                                    <!--begin::Invoice Date-->
                                    <div class="text-gray-600 fs-7 fw-bold mb-3">Ngày đặt</div>
                                    <div class="fs-6 text-gray-800 fw-bold">@Model.order_date.ToString("dd-MM-yyyy HH:mm:ss")</div>
                                    <!--end::Invoice Date-->
                                }
                            </div>
                            <!--end::Content-->
                        </div>
                        <!--end::Wrapper-->
                    </div>
                    <!--end::Body-->
                    <!-- begin::Footer-->
                    <div class="d-flex flex-stack flex-wrap mt-lg-20 pt-13">
                        <!-- begin::Actions-->
                        <div class="my-1 me-5">
                            <!-- begin::Pint-->
                            <button type="button" class="btn btn-success my-1 me-12" onclick="window.print();">In đơn hàng</button>
                            <!-- end::Pint-->
                        </div>
                        <!-- end::Actions-->
                    </div>
                    <!-- end::Footer-->
                </div>
                <!-- end::Wrapper-->
            </div>
            <!-- end::Body-->
        </div>
        <!-- end::Invoice 1-->
    </div>
    <!--end::Container-->
</div>
<!--end::Post-->
</div>
<!--end::Content-->
