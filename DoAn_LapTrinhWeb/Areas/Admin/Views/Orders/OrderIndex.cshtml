                                <th class="center_th_table">
                                    <div class="form-check form-check-sm form-check-custom form-check-solid ">
                                        <input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_customers_table .form-check-input" value="1" />
                                    </div>
                                </th>
                                <th class="text-center">ID</th>
                                <th class="text-center">Tên khách hàng</th>
                                <th class="text-center">Trạng thái đơn hàng</th>
                                <th class="text-center">Tổng tiền hàng</th>
                                <th class="text-center">Người duyệt đơn</th>
                                <th class="text-center">Ngày đặt</th>
                                <th class="text-center">Hành động</th>
                            </tr>
                        </thead>
                        <!--end::Table head-->
                        <!--begin::Table body-->
                        <tbody class="fw-normal text-gray-600">
                            @if (Model.Count == 0)
                            {
                                <tr>
                                    <td class="text-danger fw-bold">
                                        Không có đơn hàng
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <div class="form-check form-check-sm form-check-custom form-check-solid">
                                                <input class="form-check-input" type="checkbox" value="1" />
                                            </div>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("OrderDetails", "Orders", new { id = item.order_id })" class="text-gray-700 text-hover-primary fw-bold btnloader">#@item.order_id</a>
                                        </td>
                                        <td class="text-center">
                                            <span data-bs-toggle="tooltip" data-bs-placement="top" title="Email: @item.Email">@item.Name</span>
                                        </td>

                                        <td class="text-center">
                                            <button class="StatusOrder btn p-0" data-status="@item.status" data-id="@item.order_id" data-toggle="modal"
                                                    data-target="#modal-secondary">
                                                @if (item.status == "1")
                                                {
                                                    <button type="button" class="btn btn-warning btn-sm px-3">
                                                        <span class="indicator-label">
                                                            Chờ xử lý
                                                        </span>
                                                    </button>
                                                    <button id="buttonwaiting" type="button" onclick="location.href='@Url.Action("ChangeProcessing", "Orders", new { id = item.order_id })'" class="btn btn-secondary btn-sm px-3 btnloader">
                                                        <span class="indicator-label">
                                                            Đang xử lý
                                                        </span>
                                                        <span class="indicator-progress">
                                                            Chờ... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                                        </span>
                                                    </button>
                                                    <button type="button" onclick="location.href='@Url.Action("ChangeComplete", "Orders", new { id = item.order_id })'" class="btn btn-secondary btn-sm px-3 btnloader">
                                                        <span class="indicator-label">
                                                            Hoàn thành
                                                        </span>
                                                        <span class="indicator-progress">
                                                            Chờ... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                                        </span>
                                                    </button>
                                                }
                                                else if (item.status == "2")
                                                {
                                                    <button type="button" id="buttonwaiting" onclick="location.href='@Url.Action("ChangeWaitting", "Orders", new { id = item.order_id })'" class="btn btn-secondary btnloader btn-sm px-3 btnloader">
                                                        <span class="indicator-label">
                                                            Chờ xử lý
                                                        </span>
                                                        <span class="indicator-progress">
                                                            Chờ... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                                        </span>
                                                    </button>
                                                    <button type="button" class="btn btn-info btn-sm px-3">
                                                        Đang xử lý
                                                    </button>
                                                    <button type="button" id="buttonwaiting" onclick="location.href='@Url.Action("ChangeComplete", "Orders", new { id = item.order_id })'" class="btn btn-secondary btnloader btn-sm px-3">
                                                        <span class="indicator-label">
                                                            Hoàn thành
                                                        </span>
                                                        <span class="indicator-progress">
                                                            Chờ... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                                        </span>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="button" disabled class="btn btn-secondary btn-sm px-3" data-bs-toggle="tooltip" data-bs-placement="top" title="Chờ xử lý">Chờ xử lý</button>
                                                    <button type="button" disabled class="btn btn-secondary btn-sm px-3" data-bs-toggle="tooltip" data-bs-placement="top" title="Đang xử lý">Đang xử lý</button>
                                                    <button type="button" class="btn btn-success btn-sm px-3" data-bs-toggle="tooltip" data-bs-placement="top" title="Hoàn thành">Hoàn thành</button>
                                                }
                                            </button>
                                        </td>
                                        <td class="text-center">
                                            @if (item.total_price == 0)
                                            {
                                                <span class="text-success">0₫</span>
                                            }
                                            else
                                            {
                                                <span>@item.total_price.ToString("#,0₫", culture.NumberFormat)</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @*@if (item.payment_id != 1 && item.payment_transaction=="2")
                                            {
                                                <span class="text-success">0₫</span>
                                            }
                                            else
                                            {
                                                <span>@item.total_price.ToString("#,0₫", culture.NumberFormat)</span>
                                            }*@
