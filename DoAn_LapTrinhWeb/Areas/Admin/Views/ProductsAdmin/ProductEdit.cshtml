                                        <textarea class="form-control" name="specification" id="ckedittor_uploadimage1">@Model.specification</textarea>
                                        @Html.ValidationMessageFor(model => model.specification, "", new { @class = "text-danger" })
                                    </div>
                                    <!--end::Col-->
                                </div>
                                <!--end::Input group-->
                                <!--begin::Input group-->
                                <div class="row mb-6">
                                    <!--begin::Label-->
                                    <label class="col-lg-4 col-form-label  fw-bold fs-6">Mô tả sản phẩm</label>
                                    <!--end::Label-->
                                    <!--begin::Col-->
                                    <div class="col-lg-8 fv-row">
                                        <!--id="ckedittor_uploadimage" | path: ~/Scripts/admin_js/custom_ckfinder_ckeditor.js-->
                                        <textarea class="form-control" name="description" id="ckedittor_uploadimage">@Model.description</textarea>
                                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
