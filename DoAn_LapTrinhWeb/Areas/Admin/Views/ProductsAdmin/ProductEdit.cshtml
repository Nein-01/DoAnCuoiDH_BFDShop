                                    </div>
                                    <!--end::Col-->
                                </div>
                                <!--end::Input group-->
                                <!--begin::Input group-->
                                <div class="row mb-6">
                                    <!--begin::Label-->
                                    <label class="col-lg-4 col-form-label required fw-bold fs-6">Số lượng</label>
                                    <!--end::Label-->
                                    <!--begin::Col-->
                                    <div class="col-lg-8 fv-row">
                                        @Html.EditorFor(model => model.quantity, new
                                        {
                                            htmlAttributes = new
                                            {
                                                @class = "form-control form-control-solid",
                                        placeholder = "Nhập số lượng",
                                                type = "number",
                                                value = "0",
                                                oninput = "validity.valid || (value = '');"
                                            }
                                        })
