                                        {
                                            htmlAttributes = new
                                            {
                                                @class = "form-control form-control-solid",
                                        placeholder = "Nhập giá sản phẩm",
                                                type = "number",
                                                value = "0",
                                                oninput = "validity.valid || (value = '');"
                                            }
                                        })
