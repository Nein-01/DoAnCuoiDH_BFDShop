                        <div class="col-lg-8">
                            @if (Model.Gender == "1")
                            {
                                <span class="fw-bold fs-6 text-dark">Nam</span>
                            }
                            else if (Model.Gender == "2")
                            {
                                <span class="fw-bold fs-6 text-dark">Nữ</span>
                            }
                            else
                            {
                                <span class="fw-bold fs-6 text-dark">Khác</span>
                            }
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="row mb-7">
                        <!--begin::Label-->
                        <label class="col-lg-4 fw-bold text-muted">Request code</label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-8">
                            @if (Model.Requestcode == "" || Model.Requestcode == null)
                            {
                                <span class="fw-bold fs-6 text-dark">Không có</span>
                            }
                            else
                            {
                                <span class="fw-bold fs-6 text-info">1</span>
                            }
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="row mb-7">
                        <!--begin::Label-->
                        <label class="col-lg-4 fw-bold text-muted">Ngày tạo</label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-8">
                            <span class="fw-bold fs-6 text-dark">@Model.create_at.ToString("dd-MM-yyyy HH:mm")</span>
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="row mb-7">
                        <!--begin::Label-->
                        <label class="col-lg-4 fw-bold text-muted">Ngày cập nhật</label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-8">
                            <span class="fw-bold fs-6 text-dark">@Model.update_at.ToString("dd-MM-yyyy HH:mm")</span>
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="row mb-7">
                        <!--begin::Label-->
                        <label class="col-lg-4 fw-bold text-muted">Người tạo</label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-8">
                            <span class="fw-bold fs-6 text-dark">@Model.create_by</span>
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="row mb-7">
                        <!--begin::Label-->
                        <label class="col-lg-4 fw-bold text-muted">Người cập nhật</label>
                        <!--end::Label-->
