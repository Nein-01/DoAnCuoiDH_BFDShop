@using PagedList.Mvc
@model PagedList.IPagedList<DoAn_LapTrinhWeb.DTOs.ProductDTOs>
@{
    ViewBag.Title = "Danh sách ảnh sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
    var culture = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

@section scripts{
    @* <script src="~/Scripts/admin_js/search_ProductImage.js"></script> *@

}

<!--begin::css paging-->
<link href="~/Content/admin_css/PagedList.css" rel="stylesheet"/>
<!--end::css paging-->
<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
<!--begin::Toolbar-->
<div class="toolbar" id="kt_toolbar">
    <!--begin::Container-->
    <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
        <!--begin::Page title-->
        <div data-kt-place="true" data-kt-place-mode="prepend" data-kt-place-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
            <!--begin::Title-->
            <h1 class="d-flex align-items-center text-dark fw-bolder my-1 fs-3">Danh sách ảnh sản phẩm</h1>
            <!--end::Title-->
            <!--begin::Separator-->
            <span class="h-20px border-gray-200 border-start mx-4"></span>
            <!--end::Separator-->
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <a href="@Url.Action("Index", "Dashboard")" class="text-muted text-hover-primary">Trang chủ</a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-200 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">Quản lý sản phẩm</li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-200 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-dark">Danh sách ảnh sản phẩm</li>
                <!--end::Item-->
            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end::Page title-->
        <!--begin::Actions-->
        <div class="d-flex align-items-center py-1">
            <!--begin::Filer-->
            <div>
                <a href="#" class="btn btn-sm btn-flex btn-light btn-active-primary fw-bolder" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-flip="top-end">
                    <!--begin::Svg Icon | path: icons/duotone/Text/Filter.svg-->
                    <span class="svg-icon svg-icon-5 svg-icon-gray-500 me-1">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <rect x="0" y="0" width="24" height="24"/>
                                <path d="M5,4 L19,4 C19.2761424,4 19.5,4.22385763 19.5,4.5 C19.5,4.60818511 19.4649111,4.71345191 19.4,4.8 L14,12 L14,20.190983 C14,20.4671254 13.7761424,20.690983 13.5,20.690983 C13.4223775,20.690983 13.3458209,20.6729105 13.2763932,20.6381966 L10,19 L10,12 L4.6,4.8 C4.43431458,4.5790861 4.4790861,4.26568542 4.7,4.1 C4.78654809,4.03508894 4.89181489,4 5,4 Z" fill="#000000"/>
                            </g>
                        </svg>
                    </span>
                    <!--end::Svg Icon-->Bộ lọc
                </a>
                <!--begin::Menu-->
                <div class="menu menu-sub menu-sub-dropdown w-250px w-md-300px" data-kt-menu="true">
                    <!--begin::Menu separator-->
                    <div class="separator border-gray-200"></div>
                    <!--end::Menu separator-->
                    <!--begin::Form-->
                    <div class="px-7 py-5">
                        <!--begin::Input group-->
                        <div class="mb-2 border-bottom-3">
                            <!--begin::Label-->
                            <a class="text-gray-700 text-hover-primary fw-bold " href="@Url.Action("ProductImgIndex", "Product_Image", new { sortOrder = ViewBag.DateSortParm })">Sản phẩm mới - cũ</a>
                            <!--end::Label-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="mb-2 dropdownsort">
                            <!--begin::Label-->
                            <a class="text-gray-700 text-hover-primary fw-bold dropbtnsort" href="#">Số lượng ảnh đã Upload</a>
                            <!--end::Label-->
                            <div class="dropdown-contentsort">
                                <a href="@Url.Action("ProductImgIndex", "Product_Image", new { sortOrder = ViewBag.OneImgSortParm })">Đã up ảnh 1</a>
                                <a href="@Url.Action("ProductImgIndex", "Product_Image", new { sortOrder = ViewBag.TwoImgSortParm })">Đã up ảnh 1,2</a>
                                <a href="@Url.Action("ProductImgIndex", "Product_Image", new { sortOrder = ViewBag.ThreeImgSortParm })">Đã up ảnh 1,2,3</a>
                                <a href="@Url.Action("ProductImgIndex", "Product_Image", new { sortOrder = ViewBag.FourImgSortParm })">Đã up ảnh 1,2,3,4</a>
                                <a href="@Url.Action("ProductImgIndex", "Product_Image", new { sortOrder = ViewBag.ImgSortParm })">Đã up đủ ảnh</a>
                            </div>
                        </div>
                        <!--end::Input group-->
                    </div>
                    <!--end::Form-->
                </div>
                <!--end::Menu-->
            </div>
            <!--end::Filter-->
        </div>
        <!--end::Actions-->
    </div>
    <!--end::Container-->
</div>
<!--end::Toolbar-->
<!--begin::Post-->
<div class="post d-flex flex-column-fluid " id="kt_post">
    <!--begin::Container-->
    <div id="kt_content_container" class="container ">
        <div class="card @*mb-5 mb-xl-8*@">
            <!--begin::Card header-->
            <div class="card-header border-0 pt-6">
                <!--begin::Card title-->
                <div class="card-title">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative my-1">
                        <!--begin::Svg Icon | path: icons/duotone/General/Search.svg-->
                        <span class="svg-icon svg-icon-1 position-absolute ms-6">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <rect x="0" y="0" width="24" height="24"/>
                                    <path d="M14.2928932,16.7071068 C13.9023689,16.3165825 13.9023689,15.6834175 14.2928932,15.2928932 C14.6834175,14.9023689 15.3165825,14.9023689 15.7071068,15.2928932 L19.7071068,19.2928932 C20.0976311,19.6834175 20.0976311,20.3165825 19.7071068,20.7071068 C19.3165825,21.0976311 18.6834175,21.0976311 18.2928932,20.7071068 L14.2928932,16.7071068 Z" fill="#000000" fill-rule="nonzero" opacity="0.3"/>
                                    <path d="M11,16 C13.7614237,16 16,13.7614237 16,11 C16,8.23857625 13.7614237,6 11,6 C8.23857625,6 6,8.23857625 6,11 C6,13.7614237 8.23857625,16 11,16 Z M11,18 C7.13400675,18 4,14.8659932 4,11 C4,7.13400675 7.13400675,4 11,4 C14.8659932,4 18,7.13400675 18,11 C18,14.8659932 14.8659932,18 11,18 Z" fill="#000000" fill-rule="nonzero"/>
                                </g>
                            </svg>
                        </span>
                        <form class="d-flex">
                            <!--end::Svg Icon-->
                            <input type="text" id="product_name" data-kt-customer-table-filter="search" name="search" class="form-control form-control-solid w-250px ps-14" placeholder="Tìm kiếm ảnh sản phẩm"/>
                            <!--begin::Search Filter-->
                            <button type="button" class="btn btn-light-primary ms-2" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-flip="top-end">
                                <!--begin::Svg Icon | path: icons/duotone/Text/Filter.svg-->
                                <span class="svg-icon svg-icon-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                            <rect x="0" y="0" width="24" height="24"/>
                                            <path d="M5,4 L19,4 C19.2761424,4 19.5,4.22385763 19.5,4.5 C19.5,4.60818511 19.4649111,4.71345191 19.4,4.8 L14,12 L14,20.190983 C14,20.4671254 13.7761424,20.690983 13.5,20.690983 C13.4223775,20.690983 13.3458209,20.6729105 13.2763932,20.6381966 L10,19 L10,12 L4.6,4.8 C4.43431458,4.5790861 4.4790861,4.26568542 4.7,4.1 C4.78654809,4.03508894 4.89181489,4 5,4 Z" fill="#000000"/>
                                        </g>
                                    </svg>
                                </span>
                                <!--end::Svg Icon-->Tất cả
                            </button>
                            <!--begin::Menu 1-->
                            <div class="menu menu-sub menu-sub-dropdown w-300px w-md-325px" data-kt-menu="true">
                                <!--begin::Header-->
                                <div class="px-7 py-5">
                                    <div class="fs-5 text-dark fw-bolder">Bộ lọc tìm kiếm</div>
                                </div>
                                <!--end::Header-->
                                <!--begin::Separator-->
                                <div class="separator border-gray-200"></div>
                                <!--end::Separator-->
                                <!--begin::Content-->
                                <div class="px-7 py-5" data-kt-user-table-filter="form">
                                    <!--begin::Input group-->
                                    <div class="mb-10">
                                        <label class="form-label fs-6 fw-bold">Tìm kiếm theo:</label>
                                        <select id="show" name="show" class="form-select form-select-solid fw-bolder" data-kt-select2="true" data-placeholder="Select option" data-allow-clear="true" data-kt-user-table-filter="role" data-hide-search="true">
                                            <option value="1">Tìm kiếm tất cả</option>
                                            <option value="2">Mã Images</option>
                                            <option value="3">Mã sản phẩm</option>
                                            <option value="4">Tên sản phẩm</option>
                                            <option value="5">Tên thể loại</option>

                                        </select>
                                    </div>
                                    <!--end::Input group-->
                                    <!--begin::Actions-->
                                    <div class="d-flex justify-content-end">
                                        <button type="reset" class="btn btn-white btn-active-light-primary fw-bold me-2 px-6" data-kt-menu-dismiss="true" data-kt-user-table-filter="reset">Reset</button>
                                        <button type="button" class="btn btn-primary fw-bold px-6" data-kt-menu-dismiss="true" data-kt-user-table-filter="filter">Apply</button>
                                    </div>
                                    <!--end::Actions-->
                                </div>
                                <!--end::Content-->
                            </div>
                            <!--end::Menu 1-->
                            <!--end::Search Filter-->
                        </form>
                    </div>
                    <!--end::Search-->
                </div>
                <!--begin::Card title-->
            </div>
            <!--end::Card header-->
            <!--begin::Body-->
            <div class="card-body py-3 hide_paging_nnum animate__animated animate__fadeIn ">
                <!--begin::Table container-->
                <!--begin::Table-->
                <table class="table table-row-dashed table-row-gray-300 gy-7 center_th_table">
                    <!--begin::Table head-->
                    <thead>
                    <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
                        <th class="text-center">Mã hình ảnh</th>
                        <th class="text-center">Mã sản phẩm</th>
                        <th class="text-center">Tên sản phẩm</th>
                        <th class="text-center">Tên thể loại</th>
                        <th class="text-center">Giá bán</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                    </thead>
                    <!--end::Table head-->
                    <!--begin::Table body-->
                    <tbody class="fw-normal text-gray-600">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <a> @item.product_img_id</a>

                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("ProductDetails", "ProductsAdmin", new { id = item.product_id })" class="text-gray-700 text-hover-primary fw-bold">@item.product_id</a>
                            </td>

                            <td>
                                <div class="d-flex">
                                    <a data-fslightbox href="@item.Image">
                                        <div class="symbol symbol-45px me-3">
                                            <img src="@item.Image" alt="@item.product_name" style="border: 1px solid #e8f3f3;"/>
                                        </div>
                                    </a>
                                    <div class="d-flex justify-content-start flex-column ">
                                        <span class="limit_nameproduct_pdimg text-gray-700  fw-bold">@item.product_name</span>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="limit_genre_producimg">@item.genre_name</span>
                            </td>
                            <td class="text-center">
                                @if (item.discount_start < DateTime.Now && item.discount_end > DateTime.Now && item.discount_status == "1")
                                {
                                    <div class="d-flex justify-content-center flex-column">
                                        <span class="limit_price fw-bold fs-6 color_website">@((item.price - item.discount_price).ToString("#,###₫", culture.NumberFormat))</span>
                                        <span class="limit_price text-dark text-hover-primary">
                                            <s class="text-muted">@item.price.ToString("#,###₫", culture.NumberFormat)</s>
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    <span class="limit_price">@item.price.ToString("#,###₫", culture.NumberFormat)</span>
                                }
                            </td>

                            <td class="text-center">
                                <a href="@Url.Action("ProductImgEdit", "Product_Image", new { id = item.product_id })" class="btn btn-icon btn-bg-light btn-active-color-success btn-sm me-1">
                                    <!--begin::Svg Icon | path: fonts/duotone/Communication/Write.svg-->
                                    <span class="svg-icon svg-icon-3" data-bs-toggle="tooltip" data-bs-placement="top" title="Chỉnh sửa">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                            <path d="M12.2674799,18.2323597 L12.0084872,5.45852451 C12.0004303,5.06114792 12.1504154,4.6768183 12.4255037,4.38993949 L15.0030167,1.70195304 L17.5910752,4.40093695 C17.8599071,4.6812911 18.0095067,5.05499603 18.0083938,5.44341307 L17.9718262,18.2062508 C17.9694575,19.0329966 17.2985816,19.701953 16.4718324,19.701953 L13.7671717,19.701953 C12.9505952,19.701953 12.2840328,19.0487684 12.2674799,18.2323597 Z" fill="#000000" fill-rule="nonzero" transform="translate(14.701953, 10.701953) rotate(-135.000000) translate(-14.701953, -10.701953)"/>
                                            <path d="M12.9,2 C13.4522847,2 13.9,2.44771525 13.9,3 C13.9,3.55228475 13.4522847,4 12.9,4 L6,4 C4.8954305,4 4,4.8954305 4,6 L4,18 C4,19.1045695 4.8954305,20 6,20 L18,20 C19.1045695,20 20,19.1045695 20,18 L20,13 C20,12.4477153 20.4477153,12 21,12 C21.5522847,12 22,12.4477153 22,13 L22,18 C22,20.209139 20.209139,22 18,22 L6,22 C3.790861,22 2,20.209139 2,18 L2,6 C2,3.790861 3.790861,2 6,2 L12.9,2 Z" fill="#000000" fill-rule="nonzero" opacity="0.3"/>
                                        </svg>
                                    </span>
                                    <!--end::Svg Icon-->
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                    <!--end::Table body-->
                </table>
                <!--end::Table-->
                <!--end::Table container-->
                <!--begin::Pagination-->
                <div class="paging_custom row">
                    <div class="col-lg-5">
                        <span> Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
                    </div>
                    <div class="col-lg-7 d-flex  flex-row-reverse">
                        @Html.PagedListPager(Model, page => Url.Action("ProductImgIndex", new { page, sortOrder = ViewBag.CurrentSort }), new PagedListRenderOptions
                        {
                            LinkToPreviousPageFormat = "‹",
                            LinkToNextPageFormat = "›",
                            DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                            DisplayLinkToLastPage = PagedListDisplayMode.Never,
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always,
                            MaximumPageNumbersToDisplay = 10
                        })
                    </div>
                </div>
                <!--end::Pagination-->
            </div>
            <!--end::Body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>
<!--end::Post-->
</div>
<!--end::Content-->